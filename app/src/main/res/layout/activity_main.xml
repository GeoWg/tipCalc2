<?xml version="1.0" encoding="utf-8"?>
<android.widget.TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#DADADADA"
    android:id="@+id/tableLayout"
    android:shrinkColumns="1,2,3"
    tools:context="com.example.george.tipcalc.MainActivity">

    <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/billTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right|center_vertical"
            android:longClickable="false"
            android:paddingRight="5dp"
            android:text="Bill Total"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/billEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0.00"
            android:layout_span="3"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:focusable="false"
            android:gravity="center"
            android:longClickable="false"
            android:text="10%"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/fifteenTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:longClickable="false"
            android:text="15%"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/twentyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:longClickable="false"
            android:text="20%"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right|center_vertical"
            android:longClickable="false"
            android:paddingRight="5dp"
            android:text="Tip"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tip10EditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:text="0.00" />

        <EditText
            android:id="@+id/tip15EditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:text="0.00" />

        <EditText
            android:id="@+id/tip20EditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:text="0.00" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right|center_vertical"
            android:longClickable="false"
            android:paddingRight="5dp"
            android:text="Total"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/total10EditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:text="0.00" />

        <EditText
            android:id="@+id/total15EditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:text="0.00" />

        <EditText
            android:id="@+id/total20EditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:text="0.00" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/customTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:gravity="right|center_vertical"
            android:longClickable="false"
            android:text="Custom"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000" />

        <SeekBar
            android:id="@+id/customSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:focusable="false"
            android:max="30"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:progress="18" />

        <TextView
            android:id="@+id/customTipTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:gravity="center_vertical"
            android:longClickable="false"
            android:text="18%"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tipCustomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right|center_vertical"
            android:longClickable="false"
            android:paddingRight="5dp"
            android:text="Tip"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tipCustomEditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="number"
            android:longClickable="false"
            android:text="0.00" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right|center_vertical"
            android:longClickable="false"
            android:paddingRight="5dp"
            android:text="Total"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="#000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/totalCustomEditTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="number"
            android:longClickable="false"
            android:text="0.00" />

    </TableRow>
</android.widget.TableLayout>
